<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settingsButtons"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/app_margin"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_list_item_photo"
        android:layout_width="@dimen/settings_user_photo_width"
        android:layout_height="@dimen/settings_user_photo_height"
        android:src="@drawable/default_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_list_item_contact_fullname"
        style="@style/normalText"
        tools:text="Name Item"
        app:layout_constraintStart_toEndOf="@+id/main_list_item_photo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_list_last_message"
        style="@style/normalText"
        android:textColor="@color/material_drawer_hint_icon"
        tools:text="Last message"
        app:layout_constraintStart_toEndOf="@id/main_list_item_photo"
        app:layout_constraintTop_toBottomOf="@id/main_list_item_contact_fullname"/>




</androidx.constraintlayout.widget.ConstraintLayout>