<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.settings.ChangeNameFragment">

    <EditText
        android:id="@+id/settings_input_name"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:inputType="text"
        android:maxLength="12"
        android:hint="@string/settings_hint_input_name"
        android:textColorHint="@color/material_drawer_hint_icon"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/settings_input_surname"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:maxLength="11"
        android:inputType="text"
        android:hint="@string/settings_hint_input_surname"
        android:textColorHint="@color/material_drawer_hint_icon"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_input_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>