<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_drawer_hint_text</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/material_drawer_hint_text</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="action_menu" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="edit_text">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>